{% extends 'base.html.twig' %}

{% block title %}Hello ModuleController!{% endblock %}

{% block body %}
<div class="upper">
    <h2>Ajouter un module</h2>
    {{ form (formAddModule)}}
</div>
<div class="lower">
{% if modules|length >= 1 %}
<table>
    <thead class="table">
        <tr>
            <th colspan="2"><h1>Liste des modules</h1></th>
        </tr>
        <tr>
            <td>Nom</td>
            <td>Action</td>

        </tr>
    </thead>
    <tbody class="table">
        {% for module in modules %}
            <tr class="clickable-row" onclick="window.location='{{ path('show_module', {'id': module.id}) }}'">
                <td >{{ module.name }}</td>
                <td><a class="button-delete" href="{{ path('remove_module', {'id': module.id}) }}"><i class="fa-solid fa-trash-can"></i></a></td>
            </tr>
        {% endfor %}
    </tbody>
</table>
    
{% else %}

<p>Aucun modules enregistr√©s.</p>

{% endif %}
</div>



{% endblock %}
