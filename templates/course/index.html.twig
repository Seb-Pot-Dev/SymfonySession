{% extends 'base.html.twig' %}

{% block title %}Hello CourseController!{% endblock %}

{% block body %}
<div class="upper">
    <h2>Ajouter une formation</h2>
    {{ form (formAddCourse)}}
</div>
<div class="lower">

{% if courses >= 1 %}
<table>
    <thead class="table">
        <tr>
            <th colspan="2"><h1>Liste des formations</h1></th>
        </tr>
        <tr>
            <td>Nom</td>
            <td>Action</td>

        </tr>
    </thead>
    <tbody class="table">
        {% for course in courses %}
            <tr class="clickable-row" onclick="window.location='{{ path('show_course', {'id': course.id}) }}'">
                <td >{{ course.name }}</td>
                <td><a class="button-delete" href="{{ path('remove_course', {'id': course.id}) }}"><i class="fa-solid fa-trash-can"></i></a></td>
            </tr>
        {% endfor %}
    </tbody>
</table>

{% else %}
    <p>Aucune formations enregistr√©es.</p>
{% endif %}
</div>
{% endblock %}
