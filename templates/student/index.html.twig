{% extends 'base.html.twig' %}

{% block title %}Hello StudentController!{% endblock %}

{% block body %}
<div class="upper">


<h2>Ajouter un étudiant </h2>
{{ form(formAddStudent)}}
</div>
<div class="lower">


{% if students|length >= 1 %}
<table>
    <thead class="table">
        <tr>
            <th colspan="2"> <h1>Liste des étudiants</h1></th>
        </tr>
        <tr>
            <td>Nom</td>
            <td>Action</td>

        </tr>
    </thead>
    <tbody class="table">
        {% for student in students %}
            <tr class="clickable-row" 
            onclick="window.location='{{ path('show_student', {'id': student.id}) }}'"
            >
                <td >{{ student }}</td>
                <td><a class="button-delete" href="{{ path('remove_student', {'id': student.id}) }}"><i class="fa-solid fa-trash-can"></i></a></td>
            </tr>
        {% endfor %}
    </tbody>
</table>
{% else %}
<p>Aucun étudiants enregistrés.</p>
{% endif %}
</div>
{% endblock %}
