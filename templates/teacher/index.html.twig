{% extends 'base.html.twig' %}

{% block title %}Hello TeacherController!{% endblock %}

{% block body %}
<div class="upper">
    <h2>Ajouter un prof</h2>
    {{ form(formAddTeacher)}}
</div>
<div class="lower">
{% if teachers|length >= 1 %}
<table>
    <thead class="table">
        <tr>
            <th colspan="2"><h1>Liste des profs</h1></th>
        </tr>
        <tr>
            <td>Nom</td>
            <td>Action</td>

        </tr>
    </thead>
    <tbody class="table">
        {% for teacher in teachers %}
            <tr class="clickable-row" 
            {# onclick="window.location='{{ path('show_teacher', {'id': course.id}) }}'" #}
            >
                <td >{{ teacher }}</td>
                <td><a class="button-delete" href="{{ path('remove_teacher', {'id': teacher.id}) }}"><i class="fa-solid fa-trash-can"></i></a></td>
            </tr>
            {% endfor %}
    </tbody>
</table>

{% else %}
<p>Aucun professeurs enregistr√©s.</p>
{% endif %}
</div>

{% endblock %}
